<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>cc.bitky.jetbrains.plugin.universalgenerate</id>
    <name>Bitkylin-Universal-Generate</name>
    <vendor>bitkylin</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!--        <toolWindow factoryClass="cc.bitky.jetbrains.plugin.universalgenerate.toolWindow.MyToolWindowFactory"-->
        <!--                    id="MyToolWindow"/>-->
        <notificationGroup id="bitkylinErrorNotification"
                           displayType="BALLOON"
                           key="bitkylinErrorNotification"/>
        <applicationService
                serviceImplementation="cc.bitky.jetbrains.plugin.universalgenerate.config.setting.state.GlobalSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="cc.bitky.jetbrains.plugin.universalgenerate.config.setting.configurable.GlobalSettingsConfigurable"
                id="cc.bitky.jetbrains.plugin.universalgenerate.config.setting.configurable.GlobalSettingsConfigurable"
                displayName="Bitkylin Universal Generate Init"/>
    </extensions>

    <applicationListeners>
        <!--        <listener class="cc.bitky.jetbrains.plugin.universalgenerate.listeners.MyApplicationActivationListener"-->
        <!--                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>-->
    </applicationListeners>

    <actions>
        <group id="cc.bitky.jetbrains.plugin.universalgenerate.group.generate-annotation"
               class="cc.bitky.jetbrains.plugin.universalgenerate.action.actiongroup.GenerateAnnotationActionGroup"
               text="生成Swagger和Protostuff注解" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>

        <group id="cc.bitky.jetbrains.plugin.universalgenerate.group.generate-java-doc"
               class="cc.bitky.jetbrains.plugin.universalgenerate.action.actiongroup.SwaggerToJavaDocActionGroup"
               text="移除注解并生成JavaDoc" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>

    </actions>

</idea-plugin>
