<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>cc.bitky.jetbrains.plugin.universalgenerate</id>
    <name>bitky-universal-generate Template</name>
    <vendor>bitkylin</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="cc.bitky.jetbrains.plugin.universalgenerate.toolWindow.MyToolWindowFactory"
                    id="MyToolWindow"/>
        <notificationGroup id="bitkylinErrorNotification"
                           displayType="BALLOON"
                           key="bitkylinErrorNotification"/>
    </extensions>

    <applicationListeners>
        <listener class="cc.bitky.jetbrains.plugin.universalgenerate.listeners.MyApplicationActivationListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>

    <actions>
        <!-- Add your actions here -->
        <action id="cc.bitky.jetbrains.plugin.universalgenerate.action.RenewGenerateForFileAction"
                class="cc.bitky.jetbrains.plugin.universalgenerate.action.RenewGenerateForFileAction"
                text="全局重新生成"
                description="全局重新生成描述">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="cc.bitky.jetbrains.plugin.universalgenerate.action.PaddingGenerateForFileAction"
                class="cc.bitky.jetbrains.plugin.universalgenerate.action.PaddingGenerateForFileAction"
                text="全局填充"
                description="全局重新生成描述">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="cc.bitky.jetbrains.plugin.universalgenerate.action.RenewGenerateForElementAction"
                class="cc.bitky.jetbrains.plugin.universalgenerate.action.RenewGenerateForElementAction"
                text="元素重新生成"
                description="全局重新生成描述">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="cc.bitky.jetbrains.plugin.universalgenerate.action.PaddingGenerateForElementAction"
                class="cc.bitky.jetbrains.plugin.universalgenerate.action.PaddingGenerateForElementAction"
                text="元素填充"
                description="全局重新生成描述">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="cc.bitky.jetbrains.plugin.universalgenerate.action.SwaggerToJavaDocAction"
                class="cc.bitky.jetbrains.plugin.universalgenerate.action.SwaggerToJavaDocAction"
                text="Swagger转JavaDoc"
                description="Swagger转JavaDoc">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

    </actions>

</idea-plugin>
